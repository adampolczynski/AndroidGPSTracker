<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_row="4"
    android:layout_rowWeight="0.25"
    android:background="@color/panel_but3"
    android:id="@+id/user_linear_layout"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"></LinearLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="@color/panel_but1">

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
            android:id="@+id/imgV_user"
            android:layout_height="match_parent" />

        <TextView
            android:text="Amator jazdy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvUser_title"
            android:gravity="bottom|center_horizontal"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="0.04"
        android:layout_height="0dp">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/slideUser_panel"
        android:layout_weight="0.1"
        android:background="@color/panel_but2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="?android:attr/homeAsUpIndicator"
            android:id="@+id/navi_toucharrow"
            android:layout_alignParentRight="false"
            android:layout_alignParentLeft="true"
            android:rotation="180" />

    </RelativeLayout>


    <TextView
        android:text="@string/user_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/tvUser_info"
        android:layout_weight="0.04"
        android:gravity="center"
        android:background="@color/panel_but1" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.33"
        android:isScrollContainer="true"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:id="@+id/linear_userinfobody">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:text="@string/user_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:layout_weight="0.4"
                    android:textSize="18sp"
                    android:textStyle="normal|bold" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="@string/not_logged"
                    android:ems="10"
                    android:id="@+id/et_userName"
                    android:layout_weight="0.6" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:text="@string/user_mob"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:layout_weight="0.4"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="stara taczka"
                    android:ems="10"
                    android:id="@+id/et_userMob"
                    android:layout_weight="0.6" />
                </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:layout_marginTop="4dp">
                <TextView
                    android:text="@string/user_appro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:layout_weight="0.4"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"/>
                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:id="@+id/editText2"
                    android:layout_weight="0.6" />
                </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:layout_marginTop="4dp">
                <TextView
                    android:text="@string/user_motiv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView16"
                    android:layout_weight="0.4"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"/>
                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="stara taczka"
                    android:ems="10"
                    android:id="@+id/editText3"
                    android:layout_weight="0.6" />
                </TableRow>
        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:background="@color/panel_but2"></LinearLayout>

</LinearLayout>